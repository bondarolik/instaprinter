<%= form_for @producto do |f| %>
  <% if @producto.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@producto.errors.count, "error") %> prohibited
      this article from being saved:</h2>
    <ul>
    <% @producto.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "Titulo de producto" %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>


  <div class="form-group">
    <%= f.label :slug, "Slug para url (sin espacios)" %>
    <%= f.text_field :slug, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Texto" %>
    <%= f.text_area :description, :class => "wysihtml5 form-control" %>
  </div>
 
  <button type="submit" class="btn btn-success">Agregar producto</button>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
</script>