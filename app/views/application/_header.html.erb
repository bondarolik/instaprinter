<div id="header" class="row">
  <div class="col-md-4">
    <%= link_to image_tag("logo-alumart.png", :alt => "Alumart Logo", :width => 130, :title => "Logo Alumart"), root_path %>
  </div>

  <div class="col-md-8">
    <ul id="menubar" class="nav nav-pills">
      <li class="active"><%= link_to "Inicio", root_path %></li>
      <li><%= link_to "Quienes Somos", pages_empresa_path %></li>

      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          Productos <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
        <% product_list.each do |p| %>
          <li><%= link_to p.title, producto_path(p.id) %></li>
        <% end %>
        </ul>
      </li>

      <li><%= link_to "Trabajos", pages_trabajos_path %></li>
      <li><%= link_to "Contacto", pages_contacto_path %></li>
    </ul>
  </div>    
</div>